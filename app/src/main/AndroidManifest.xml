<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.beinit.bestpractices">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.beinit.AppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.beinit.ui.splash.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.beinit.ui.demographic.DemographicActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.beinit.ui.login.LoginActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.beinit.ui.signup.SignUpActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.beinit.ui.dashboard.DashboardActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>